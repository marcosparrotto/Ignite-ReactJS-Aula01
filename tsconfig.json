{
  "compilerOptions": {                           
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,                                   
    "jsx": "react-jsx",                                                    
    "moduleResolution": "node",                      
    "resolveJsonModule": true,         
    "noEmit": true,     
    "isolatedModules": true,                         
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,   
    "skipLibCheck": true                                
  },
  "include": ["src"],
}
